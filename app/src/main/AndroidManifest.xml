<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.reminderapp">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission
        android:name="android.permission.SCHEDULE_EXACT_ALARM"
        tools:ignore="ExactAlarm" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_reminder_logo"
        android:label="reminderapp"
        android:roundIcon="@drawable/ic_reminder_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.ReminderApp">

        <!-- Main Activity -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.ReminderApp.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SignupActivity"
            android:exported="true">

        </activity>

        <activity
            android:name=".LoginActivity"
            android:exported="true">

<!--            <intent-filter>-->
<!--                <action android:name="android.intent.action.MAIN"/>-->
<!--                <category android:name="android.intent.category.LAUNCHER"/>-->
<!--            </intent-filter>-->
        </activity>


        <activity
            android:name=".MainActivity"
            android:exported="true">
<!--            <intent-filter>-->
<!--                <action android:name="android.intent.action.MAIN" />-->
<!--                <category android:name="android.intent.category.LAUNCHER" />-->
<!--            </intent-filter>-->
        </activity>




        <!-- Reminder Receiver -->
        <receiver
            android:name=".ReminderReceiver"
            android:exported="true" />

        <!-- Snooze Receiver -->
        <receiver
            android:name=".SnoozeReceiver"
            android:exported="true" />
    </application>

</manifest>
